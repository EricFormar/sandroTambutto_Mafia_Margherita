
<!DOCTYPE html>
<html lang="es">

<head
    <%- include('../partials/head', {title}) %>
</head>

<header>

    <%- include('../partials/header') %>

    <h1 class="encabezado">Administrar Productos</h1>
    
</header>


    

<body>    

    <a href="/productAdd" class="nuevo">Agregar Nuevo Producto</a>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Ingredientes</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody> 
            <% pizzeria.variedad[0].menu.forEach(product => { %> <!-- Aquí, se itera sobre cada producto en el menú de la primera variedad de la pizzería.-->
             <tr> <!-- Para cada producto, se genera una fila en la tabla:-->
                <td><%= product.nombre %></td> 
                <td><%= product.categoria %></td> 
                <td><%= product.ingredientes ? product.ingredientes.join(', ') : 'N/A' %></td> 
                <td> $ <%= product.precio %></td> 
                <td> 
                    <a href="/admin/productEdit/<%= product.id %>">Editar</a> 
                    <form action="/admin/productDelete/<%= product.id %>" method="POST"  class="delete-form"> 
                        <button type="submit" class="delete">Eliminar</button> 
                    </form> 
                </td> 
             </tr> 
            <% }) %> 
    </tbody>
        
    </table>
</body>
</html>
