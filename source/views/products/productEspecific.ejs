<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { title }) %>
</head>

<header>
    <%- include('../partials/header', { title }) %>
</header>

<body>
    <main>
        <div class="img_productEspecific">
            
            <img src="/<%= product.imagen %>" alt="<%= product.nombre %>" class="img_productEspecific__img">
            <div class="description_productEspecific">
                <p class="nombre__descripcion"><%= product.nombre %></p>
                <h3>Ingredientes</h3>
                <p><%= product.ingredientes %></p>
            </div>
        </div>
    
        <a href="/products/productCartl/<%= product.id %>"><i class="fa-solid fa-cart-shopping car"></i></a>
    
        <a href="/products" class="Back">Volver al listado</a>
    </main>
    

    <script src="../javascripts/productCartl.js"></script>
</body>
</html>
